<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        card_view:cardCornerRadius="7dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView27">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:id="@+id/goodclubimg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/goodclubdescrib"
        android:layout_below="@+id/goodclubimg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_marginLeft="23dp"
        android:id="@+id/goodclubname"
        android:textColor="@color/line"
        android:layout_below="@+id/goodclubdescrib"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/imageView14"
                android:background="@color/background_tab_pressed"
                android:layout_below="@+id/goodclubimg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_below="@+id/imageView14"
                android:background="@color/background_tab_pressed"
                android:id="@+id/imageView15"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/goodclubname"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView26"
        android:textSize="8sp"
        android:layout_below="@+id/textView27"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
