<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <EditText
        android:id="@+id/et_studentname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@mipmap/ic_studentimg"
        android:drawablePadding="8dp"
        android:hint="用户名"/>

    <EditText
        android:id="@+id/et_stupassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@mipmap/ic_studentpsd"
        android:drawablePadding="8dp"
        android:inputType="textPassword"
        android:maxLength="16"
        android:hint="密码"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:text="忘记密码?"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tv_forget"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_login_sel"
            android:text="登录" />
    </RelativeLayout>
</LinearLayout>
