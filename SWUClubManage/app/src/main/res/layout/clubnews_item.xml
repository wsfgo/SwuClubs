<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:wsf="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="250dp"
             card_view:cardCornerRadius="6dp"
             wsf:cardElevation="7dp"
             android:id="@+id/view">


             <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="150dp"
                 android:scaleType="fitXY"
                 android:id="@+id/newsclunimg"
                 android:layout_alignParentTop="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true" />

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_below="@+id/newsclunimg"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textAppearance="?android:attr/textAppearanceMedium"
                     android:text="书法社团新闻"
                     android:id="@+id/clubnewsName"
                     android:layout_marginBottom="63dp"
                     android:layout_marginLeft="35dp"
                     android:layout_marginStart="35dp"
                     android:layout_alignParentBottom="true"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentStart="true" />

                 <ImageView
                     android:layout_width="23dp"
                     android:layout_height="23dp"
                     android:layout_marginLeft="7dp"
                     android:id="@+id/clubnewsimg"
                     android:layout_alignTop="@+id/clubnewsName"
                     android:src="@mipmap/clubnewsimg"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentStart="true" />

                 <ImageView
                     android:layout_width="5dp"
                     android:layout_height="55dp"
                     android:id="@+id/imageView5"
                     android:background="#99CCFF"
                     android:layout_alignLeft="@+id/clubnewsimg"
                     android:layout_below="@+id/clubnewsimg"
                     />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textAppearance="?android:attr/textAppearanceSmall"
                     android:text="      书法社团最近在四运举行了毛笔字切磋大赛，看他们专注的眼神！"
                     android:id="@+id/club_news_content"
                     android:layout_alignBottom="@+id/imageView5"
                     android:layout_toRightOf="@+id/imageView5"
                     android:layout_toEndOf="@+id/imageView5" />

                 <ImageView
                     android:layout_width="23dp"
                     android:layout_height="20dp"
                     android:id="@+id/clubnewstimelog"
                     android:src="@mipmap/clubnewstimeimg"
                     android:layout_marginLeft="90dp"
                     android:layout_marginStart="90dp"
                     android:layout_alignBottom="@+id/clubnewsName"
                     android:layout_toRightOf="@+id/clubnewsName"
                     android:layout_toEndOf="@+id/clubnewsName" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textAppearance="?android:attr/textAppearanceSmall"
                     android:text="2016-3-4"
                     android:id="@+id/newstime"
                     android:layout_marginLeft="15dp"
                     android:layout_marginStart="15dp"
                     android:layout_alignBottom="@+id/clubnewstimelog"
                     android:layout_toRightOf="@+id/clubnewstimelog"
                     android:layout_toEndOf="@+id/clubnewstimelog" />


             </RelativeLayout>


         </android.support.v7.widget.CardView>
     </RelativeLayout>
</LinearLayout>
